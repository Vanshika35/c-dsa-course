 4) K groups main iterate karne keliye
 void reverseInGroups(vector<long long>& arr, int n, int k){
        int end = n-1;
        int m = k;
        for(int i = 0; i< n; i+=k){
           int start = i;
           int end = min(i + k - 1, n - 1); // this is the logic of the program
            while(start < end){
                swap(arr[start++], arr[end--]);
                
                }
            }
    }

